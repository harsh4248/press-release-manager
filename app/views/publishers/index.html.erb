<%# <h1>Publishers#index</h1>
<p>Find me in app/views/publishers/index.html.erb</p> %>
<h1><%= @publisher.name %></h1>
<p><%= @publisher.description %></p>
<p><%= @publisher.website_url %></p>
<%= link_to 'Edit', edit_publisher_path(@publisher) %>

<h2>Press Releases</h2>
<%= link_to 'New Press Release', new_press_release_publisher_path(@publisher) %>
<% @press_releases.each do |press_release| %>
  <div>
    <h3><%= press_release.title %></h3>
    <p><%= press_release.content %></p>
    <p><strong>Published on:</strong> <%= press_release.publish_date %></p>
  </div>
<% end %>

